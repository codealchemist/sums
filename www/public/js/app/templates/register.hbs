<section id="register-view" class="panel panel-default smooth">
    <div class="panel-heading">
        <h3 class="panel-title">Register</h3>
    </div>
    
    <div class="panel-body">
        <form id="register-form" class="navbar-form navbar-left expand">
            <div class="form-group expand">
                <div class="input-group input-group-lg expand">
                    <span class="input-group-addon">Name</span>
                    <input id="name" name="name" type="text" class="form-control" placeholder="For example: John Malkovich">
                </div>
                <div class="input-group input-group-lg expand">
                    <span class="input-group-addon">Email</span>
                    <input id="email" name="email" type="email" class="form-control" placeholder="Your email address">
                </div>
                <div class="input-group input-group-lg expand">
                    <span class="input-group-addon">Password</span>
                    <input id="password" name="password" type="password" class="form-control" placeholder="Password">
                </div>
                <div class="input-group input-group-lg expand">
                    <span class="input-group-addon">Password</span>
                    <input id="password2" name="password2" type="password" class="form-control" placeholder="Please, repeat your password here">
                </div>
            </div>
        </form>
        
        <button id="cancel-button" type="submit" class="btn btn-default">Cancel</button>
        <button id="register-button" type="submit" class="btn btn-primary">Register</button>
    </div>
</section>
